
<header class="header header-6">
    <div class="header-top">
        <div class="container">
            
            <div class="header-right">
                      
                    </div><!-- End .header-menu -->
                </div><!-- End .header-dropdown -->
            </div><!-- End .header-right -->
        </div>
    </div>
    <div class="header-middle">
        <div class="container">
            <div class="header-left">
                <div class="header-search header-search-extended header-search-visible d-none d-lg-block">
                    <a href="#" class="search-toggle" role="button"><i class="icon-search"></i></a>
                    <form action="#" method="get">
                        
                    </form>
                </div><!-- End .header-search -->
            </div>
            <div class="header-center">
                <a href="/" class="logo">
                    <img src="/userAssets/images/dresso-low-resolution-logo-black-on-white-background (1).png" alt="DRESS LOGO" width="82" height="20">
                </a>
            </div><!-- End .header-left -->

            <div class="header-right">
                

            
                    
                    <% if (session == null) { %>
                        <a href="/login" class="wishlist-link">

                        <i class="icon-user"></i>
                    <a href="/login"><span class="wishlist-txt">Login</span></a>
                    <% } else{ %>
                        <a href="/userProfile" class="wishlist-link">
                        <i class="icon-user"></i>
                        <a href="/userProfile"><span class="wishlist-txt"> <%=user.name %> </span></a>
                        <% } %>
                </a>


                  <!-- WISHLIST BUTTON -->
                  <% if (session == null) { %>
                    <a onclick="plzlogin()" class="wishlist-link">
                        <i class="icon-heart-o"></i>
                        <span class="wishlist-txt">My Wishlist</span>
                    </a>
                    <% }else{  %>
                   
                <a href="/wishlist" class="wishlist-link">
                    <i class="icon-heart-o"></i>
                    <span class="wishlist-txt">My Wishlist</span>
                </a>
                <% } %>
                


                <!-- CART BUTTON -->
                <% if(session == null){ %>
                    <div class="dropdown cart-dropdown">
                     <a onclick="plzlogin()" class="dropdown-toggle">
                        <i class="icon-shopping-cart"></i>
                        <span class="cart-txt"></span>
                    </a>
                 <%}else{%>

                <div class="dropdown cart-dropdown">
                    <a href="/cartPage" class="dropdown-toggle" >
                        <i class="icon-shopping-cart"></i>
                        <span class="cart-txt"></span>
                    </a>
                    <% } %>
                   
                    </div><!-- End .dropdown-menu -->
                </div><!-- End .cart-dropdown -->
            </div>
        </div><!-- End .container -->
    </div><!-- End .header-middle -->

    <div class="header-bottom sticky-header">
        <div class="container">
            <div class="header-left">
                <nav class="main-nav">
                    <ul class="menu sf-arrows">
                        <li class="megamenu-container active">
                            <a href="/" class="sf-with-ul">Home</a>

                            
                        </li>
                        <li>
                            <a href="/shopPage" class="sf-with-ul">Shop</a>

                            
                        </li>
                        
                    </ul><!-- End .menu -->
                </nav><!-- End .main-nav -->

                <button class="mobile-menu-toggler">
                    <span class="sr-only">Toggle mobile menu</span>
                    <i class="icon-bars"></i>
                </button>
            </div><!-- End .header-left -->

           
        </div><!-- End .container -->
    </div><!-- End .header-bottom -->
</header><!-- End .header -->


<script>
    function plzlogin() {
        $.ajax({
            success: (response) => {
                swal.fire({
                    position: 'top',
                    title: '! Please Login To Your Account',
                    showConfirmButton: false,
                    timer: 1500,
                    customClass: {
                        popup: 'my-swal-class',
                    },
                });
            }
        });
    }
</script>