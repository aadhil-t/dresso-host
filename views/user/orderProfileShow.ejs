
<%- include('../userLayouts/userHeader.ejs')  %>
<%- include('../userLayouts/userNavbar.ejs') %>
<%- include("../userLayouts/accountSidebar.ejs") %>


<div class="row ">
    <!-- <div class="col-md-8 col-lg-10"> -->
                       <div class="col-lg-12">
                           <table class="table table-cart table-mobile">
                               <thead>
                                   <tr>
                                     
                                     <th>   </th>
                                     <th>Order ID</th>
                                     <th>Order Date</th>
                                     <th>Total Amount</th>
                                     <th>Payment</th>
                                     <!-- <th>Status</th> -->
                                     <th></th>
                                   </tr>
                               </thead>
                              
                               <tbody>
                                 <% if(orders.length > 0){
                                   orders.forEach((order)=>{
                                     %>
                                     <tr>
                                     <td>
                                       
                                         </td>
                                           
                                         
                                         <td> <%= order._id%></td>
                                         <td><%= order.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                                       
                                     
                                     
                                   
                                     <td><%= order.totalAmount%></td>
                                     <td><%= order.paymentMethod %></td>
                                     <!-- <td><%= order.status%></td> -->
                                     <td>
                                       <a class="btn btn-outline-primary-2" href="/singleOrderShow/<%= order._id %>">VIEW</a>
                                     </td>
                                     
                                   </tr>
                                     <%})
                                   }else{ %>
                                             <h1 class="d-flex justify-content-center">You Have No Orders</h1>
                                     <% } %>
                               </tbody>
                              
                           </table><!-- End .table table-wishlist -->
                           
                         
                       </div><!-- End .col-lg-9 -->
                       <!--</div> End .col-lg-9 -->
                       </div><!-- End .col-lg-9 -->
                     </div>
   
    <%- include("../userLayouts/accountFooter.ejs") %>
